{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "allowJs": true,
    "outDir": "build/www/app",
    "baseUrl": "./",
    "paths": {
      "@angular/*": ["./node_modules/@angular/*"],
      "app/*": ["./src/main/webapp/app/*"]
