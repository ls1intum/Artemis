default_platform(:ios)

desc "Build only"
lane :build do
    # Build the ${packageName} application without tests
    xcodebuild(workspace: "${packageName}Test.xcworkspace",
               derived_data_path: "DerivedData",
               scheme: "${packageName}",
               configuration: "Debug",
               clean: true,
               build: true,
               build_settings: {
                   "CODE_SIGNING_ALLOWED" => "NO",
                   "CODE_SIGNING_REQUIRED" => "NO",
                   "CODE_SIGN_IDENTITY" => "",
                   "CODE_SIGN_ENTITLEMENTS" => "",
               })
end

desc "Run All Tests"
lane :test do
    # Run UI and Unit Tests
    run_tests(workspace: "${packageName}Test.xcworkspace",
      		  derived_data_path: "DerivedData",
      		  clean: true,
       		  scheme: "${packageName}")
end

    
desc "Run Unit Tests only"
lane :unittest do
    # Run Unit Tests
    run_tests(workspace: "${packageName}Test.xcworkspace",
      		  derived_data_path: "DerivedData",
      		  clean: true,
       		  scheme: "${packageName}Test")
end

desc "Run UI Tests only"
lane :uitest do
    # Run UI Tests
    run_tests(workspace: "${packageName}Test.xcworkspace",
      		  derived_data_path: "DerivedData",
      		  clean: true,
       		  scheme: "${packageName}UITest")
end
