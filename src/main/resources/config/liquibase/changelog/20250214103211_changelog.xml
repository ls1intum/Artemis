<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="20250214103211" author="rangger">
        <createTable tableName="course_notification">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_course_notifications_course_id" references="course(id)"/>
            </column>
            <column name="type" type="tinyint unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="creation_date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="deletion_date" type="datetime">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="course_notification_parameter">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_notification_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_course_notification_parameter_notification_id" references="course_notification(id)"/>
            </column>
            <column name="key" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="varchar(512)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="course_notification_parameter"
                columnNames="course_notification_id, key"
                constraintName="uk_course_notification_parameter"/>

        <createTable tableName="user_course_notification_status">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_notification_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_course_notification_status_notification_id" references="course_notification(id)"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_course_notification_status_user_id" references="jhi_user(id)"/>
            </column>
            <column name="status" type="tinyint unsigned">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="user_course_notification_status"
                columnNames="course_notification_id, user_id"
                constraintName="uk_user_course_notification_status"/>

        <createTable tableName="user_course_notification_setting_preset">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_course_notification_setting_preset_user_id" references="jhi_user(id)"/>
            </column>
            <column name="course_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_course_notification_setting_preset_course_id" references="course(id)"/>
            </column>
            <column name="setting_preset" type="tinyint unsigned">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="user_course_notification_setting_preset"
                columnNames="user_id, course_id"
                constraintName="uk_user_course_notification_setting_preset"/>

        <createTable tableName="user_course_notification_setting_specification">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_course_notification_setting_specification_user_id" references="jhi_user(id)"/>
            </column>
            <column name="course_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_user_course_notification_setting_specification_course_id" references="course(id)"/>
            </column>
            <column name="course_notification_type" type="tinyint unsigned">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="push" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="webapp" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="summary" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint
                tableName="user_course_notification_setting_specification"
                columnNames="user_id, course_id, course_notification_type"
                constraintName="uk_user_course_notification_setting_specification"/>
    </changeSet>
</databaseChangeLog>