<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
      Migration to convert `jhi_type` and `discriminator` columns in `submission` table
      from VARCHAR to ENUM. Supports PostgreSQL and MySQL.
      Brings storage and performance improvements (esp. relevant with ~8 million rows).
    -->

    <!-- Step 1: Create ENUM types in PostgreSQL -->
    <changeSet id="20250329-11-create-enums-submission-postgres" author="krusche">
        <preConditions onFail="MARK_RAN">
            <dbms type="postgresql"/>
        </preConditions>

        <sql>
            CREATE TYPE submission_type_enum AS ENUM (
            'MANUAL',
            'TIMEOUT',
            'TEST',
            'OTHER',
            'INSTRUCTOR',
            'EXTERNAL',
            'ILLEGAL'
        );
        </sql>

        <sql>
            CREATE TYPE submission_discriminator_enum AS ENUM (
            'P', 'Q', 'M', 'T', 'F'
        );
        </sql>
    </changeSet>

    <!-- Step 2: Alter PostgreSQL columns to use enum types -->
    <changeSet id="20250329-12-alter-columns-submission-postgres" author="krusche">
        <preConditions onFail="MARK_RAN">
            <dbms type="postgresql"/>
        </preConditions>

        <sql>
            ALTER TABLE submission
            ALTER COLUMN jhi_type TYPE submission_type_enum
        USING jhi_type::submission_type_enum;
        </sql>

        <sql>
            ALTER TABLE submission
            ALTER COLUMN discriminator TYPE submission_discriminator_enum
        USING discriminator::submission_discriminator_enum;
        </sql>
    </changeSet>

    <!-- Step 3: Alter MySQL columns using inline ENUM syntax -->
    <changeSet id="20250329-13-alter-columns-submission-mysql" author="krusche">
        <preConditions onFail="MARK_RAN">
            <dbms type="mysql"/>
        </preConditions>

        <modifyDataType tableName="submission" columnName="jhi_type"
                        newDataType="enum('MANUAL','TIMEOUT','TEST','OTHER','INSTRUCTOR','EXTERNAL','ILLEGAL')"/>

        <modifyDataType tableName="submission" columnName="discriminator"
                        newDataType="enum('P','Q','M','T','F')"/>
    </changeSet>

    <!-- Step 4: delete unused column -->
    <changeSet id="20250329-14-alter-columns-mysql" author="krusche">
        <dropColumn tableName="submission" columnName="build_artifact"/>
    </changeSet>
</databaseChangeLog>
