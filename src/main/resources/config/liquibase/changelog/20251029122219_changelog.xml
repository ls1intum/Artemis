<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251029122219-add-is-approved-field" author="florian-glombik">
        <comment>Add is_approved field to ensure that a super admin approved the passkey for privileged actions</comment>

        <addColumn tableName="passkey_credential">
            <column name="is_approved" type="boolean" defaultValueBoolean="false" remarks="Approval of the passkey might be needed to use the passkey for authentication for privileged actions"/>
        </addColumn>
        <addNotNullConstraint tableName="passkey_credential" columnName="is_approved" columnDataType="boolean"/>

        <rollback>
            <dropColumn tableName="passkey_credential" columnName="is_approved"/>
        </rollback>

    </changeSet>

</databaseChangeLog>