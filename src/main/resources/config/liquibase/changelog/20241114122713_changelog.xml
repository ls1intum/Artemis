<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="20241114122713" author="rangger">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="push_notification_device_configuration" columnName="api_type"/>
            </not>

            <not>
                <or>
                    <columnExists tableName="notification" columnName="version"/>
                    <columnExists tableName="notification" columnName="minor_version"/>
                </or>
            </not>
        </preConditions>

        <addColumn tableName="push_notification_device_configuration">
            <column name="api_type" type="tinyint" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addColumn tableName="notification">
            <column name="version" type="tinyint" defaultValue="1">
                <constraints nullable="false"/>
            </column>
            <column name="minor_version" type="tinyint" defaultValue="1">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
