<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xmlns:pro="http://www.liquibase.org/xml/ns/pro" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="welscher" id="20230320100000">
        <addColumn tableName="feedback">
            <column name="test_case_id" type="bigint"/>
        </addColumn>
        <addPrimaryKey columnNames="test_case_id, task_id" constraintName="programming_exercise_task_test_casePK"
                       tableName="programming_exercise_task_test_case"/>
        <addForeignKeyConstraint baseColumnNames="test_case_id" baseTableName="feedback"
                                 constraintName="FK_feedback_test_case_id" deferrable="false"
                                 initiallyDeferred="false" referencedColumnNames="id"
                                 referencedTableName="programming_exercise_test_case" validate="true"/>
        <sql>
            <!-- Helper tables with all template and solution participation ids and their corresponding exercises
            needed since participation.exerciseId is null for these types of participation -->
            WITH tp AS (SELECT e.id, e.template_participation_id
                        FROM exercise e
                        WHERE e.discriminator = 'P'
                          AND e.template_participation_id IS NOT NULL)
               , sp AS (SELECT e.id, e.solution_participation_id
                        FROM exercise e
                        WHERE e.discriminator = 'P'
                          AND e.solution_participation_id IS NOT NULL)
               <!-- Maps every feedback to their exercise id -->
               , fe AS (SELECT f.id, f.text, e.id AS exercise_id
                        FROM feedback f
                          LEFT JOIN result r ON f.result_id = r.id
                          LEFT JOIN participation p ON r.participation_id = p.id
                        , exercise e
                        WHERE f.type = 3
                          AND f.text IS NOT NULL
                          AND f.reference IS NULL
                          AND f.text NOT LIKE 'SubPolFeedbackIdentifier%'
                          AND (p.exercise_id = e.id
                            OR p.id = (SELECT tp.template_participation_id FROM tp WHERE tp.id = e.id)
                            OR p.id = (SELECT sp.solution_participation_id FROM sp WHERE sp.id = e.id)))

            UPDATE feedback f
            <!-- Find the testcase by matching the text / test name and the exercise -->
            SET f.test_case_id = (SELECT tc.id
                                FROM programming_exercise_test_case tc,
                                     fe
                                WHERE tc.test_name = fe.text
                                  AND tc.exercise_id = fe.exercise_id
                                  AND fe.id = f.id)
            WHERE f.type = 3 <!-- Automatic -->
                AND f.text IS NOT NULL
                AND f.text NOT LIKE 'SubPolFeedbackIdentifier%' <!-- Filter out Submission policy feedback -->
                AND f.reference IS NULL <!-- Filter out SCA feedback -->
        </sql>

        <sql>
            UPDATE feedback
            SET text = NULL
            WHERE test_case_id IS NOT NULL
        </sql>
    </changeSet>
</databaseChangeLog>

