<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250627143900" author="tobias-lippert">
        <comment>Set submissionType to INSTRUCTOR where it is currently ILLEGAL</comment>
        <update tableName="submission">
            <column name="jhi_type" value="INSTRUCTOR"/>
            <where>jhi_type = 'ILLEGAL'</where>
        </update>
        <rollback>
            <update tableName="submission">
                <column name="submissionType" value="ILLEGAL"/>
                <where>submissionType = 'INSTRUCTOR'</where>
            </update>
        </rollback>
    </changeSet>

</databaseChangeLog>
