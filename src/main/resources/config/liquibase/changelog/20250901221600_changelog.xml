<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250901221600" author="tobias-lippert">
        <preConditions onFail="HALT">
            <tableExists tableName="result"/>
            <tableExists tableName="exercise"/>
            <not>
                <columnExists tableName="result" columnName="exercise_id"/>
            </not>
        </preConditions>

        <addColumn tableName="result">
            <column name="exercise_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <createIndex tableName="result" indexName="idx_result_exercise_id">
            <column name="exercise_id"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="result" indexName="idx_result_exercise_id"/>
            <dropColumn tableName="result" columnName="exercise_id"/>

        </rollback>
    </changeSet>
</databaseChangeLog>
