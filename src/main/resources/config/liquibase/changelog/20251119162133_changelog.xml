<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251119162133-1-mysqlh2" author="flbrgit">
        <preConditions onFail="MARK_RAN"><dbms type="mysql,h2"/></preConditions>
        <addColumn tableName="jhi_user">
            <column name="ai_selection_decision"
                    type="ENUM('NO_AI','LOCAL_AI','CLOUD_AI')">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="jhi_user" columnName="ai_selection_decision"/>
        </rollback>
    </changeSet>

    <changeSet id="20251119162133-1-postgres" author="flbrgit">
        <preConditions onFail="MARK_RAN"><dbms type="postgresql"/></preConditions>
        <addColumn tableName="jhi_user">
            <column name="ai_selection_decision" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="jhi_user" columnName="ai_selection_decision"/>
        </rollback>
    </changeSet>

    <changeSet id="20251119162133-2" author="flbrgit">
        <addColumn tableName="jhi_user">
            <column name="ai_selection_decision_date" type="datetime(3)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <rollback>
            <dropColumn tableName="jhi_user" columnName="ai_selection_decision_date"/>
        </rollback>
    </changeSet>

    <changeSet id="20251119162133-3" author="flbrgit">
        <!-- Migrate User with external_llm_usage_accepted -->
        <sql>
            UPDATE jhi_user
            SET ai_selection_decision = 'CLOUD_AI',
                ai_selection_decision_date = external_llm_usage_accepted
            WHERE external_llm_usage_accepted IS NOT NULL
        </sql>

        <!-- Remove old columns -->
        <dropColumn tableName="jhi_user" columnName="external_llm_usage_accepted"/>

        <rollback>
            <!-- Restore old column -->
            <addColumn tableName="jhi_user">
                <column name="external_llm_usage_accepted" type="datetime(3)">
                    <constraints nullable="true"/>
                </column>
            </addColumn>
            <!-- Restore data from new columns back to old column -->
            <sql>
                UPDATE jhi_user
                SET external_llm_usage_accepted = ai_selection_decision_date
                WHERE ai_selection_decision = 'CLOUD_AI'
            </sql>
        </rollback>
    </changeSet>
</databaseChangeLog>