<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Change Set for creating the build_log_result_mapping table -->
    <changeSet id="20240327174347" author="laurenzfb">
        <createTable tableName="build_log_result_mapping">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="build_job_id" type="varchar(255)"/>
            <column name="result_id" type="bigint"/>
        </createTable>

        <createIndex indexName="idx_build_job_id" tableName="build_log_result_mapping">
            <column name="build_job_id"/>
        </createIndex>
        <createIndex indexName="idx_result_id" tableName="build_log_result_mapping">
            <column name="result_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>