<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- Create table for MySQL/H2 with ENUM type -->
    <changeSet id="20251017200800-mysql" author="Yhmidi">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="spring_ai_chat_memory"/>
                </not>
                <or>
                    <dbms type="mysql"/>
                    <dbms type="h2"/>
                </or>
            </and>
        </preConditions>
        <createTable tableName="spring_ai_chat_memory">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="conversation_id" type="varchar(255)" remarks="Server-generated session ID in format: course_{courseId}_user_{userId}">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="enum('USER','ASSISTANT','SYSTEM','TOOL')">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="datetime(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_chat_memory_conversation_id" tableName="spring_ai_chat_memory">
            <column name="conversation_id"/>
        </createIndex>

        <createIndex indexName="idx_chat_memory_timestamp" tableName="spring_ai_chat_memory">
            <column name="timestamp"/>
        </createIndex>

        <rollback>
            <dropTable tableName="spring_ai_chat_memory"/>
        </rollback>
    </changeSet>

    <!-- Create table for PostgreSQL with text type for enums -->
    <changeSet id="20251017200800-postgres" author="Yhmidi">
        <preConditions onFail="MARK_RAN">
            <and>
                <not>
                    <tableExists tableName="spring_ai_chat_memory"/>
                </not>
                <dbms type="postgresql"/>
            </and>
        </preConditions>
        <createTable tableName="spring_ai_chat_memory">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="conversation_id" type="varchar(255)" remarks="Server-generated session ID in format: course_{courseId}_user_{userId}">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp" type="datetime(3)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex indexName="idx_chat_memory_conversation_id" tableName="spring_ai_chat_memory">
            <column name="conversation_id"/>
        </createIndex>

        <createIndex indexName="idx_chat_memory_timestamp" tableName="spring_ai_chat_memory">
            <column name="timestamp"/>
        </createIndex>

        <rollback>
            <dropTable tableName="spring_ai_chat_memory"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
