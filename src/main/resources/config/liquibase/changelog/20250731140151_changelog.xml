<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250731140151-remove-duplicates-quiz-question-progress" author="MoritzSpengler">
        <comment>Remove duplicates</comment>
        <sql>
            /* Remove duplicate quiz progress entries (keeping oldest) to prepare for unique constraint */
            DELETE FROM quiz_question_progress
            WHERE id NOT IN (
                SELECT min_id FROM (
                   SELECT MIN(id) as min_id
                   FROM quiz_question_progress
                   GROUP BY user_id, quiz_question_id
               ) AS t
            );
        </sql>
    </changeSet>

    <changeSet id="20250731140151-add-unique-constraint-quiz-question-progress" author="MoritzSpengler">
        <addUniqueConstraint
                tableName="quiz_question_progress"
                columnNames="user_id,quiz_question_id"
                constraintName="uc_quiz_question_progress_userid_quizquestionid"/>
        <rollback>
            <dropUniqueConstraint
                    tableName="quiz_question_progress"
                    constraintName="uc_quiz_question_progress_userid_quizquestionid"/>
        </rollback>
    </changeSet>
</databaseChangeLog>