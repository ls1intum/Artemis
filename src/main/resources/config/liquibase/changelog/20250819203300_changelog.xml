<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250818093000-add-course-calendar-subscription-tokens" author="marlonnienaber">
        <comment>Add nullable, unique calendar subscription token to users (per-user)</comment>

        <addColumn tableName="jhi_user">
            <column name="calendar_subscription_token" type="varchar(32)">
                <constraints nullable="true" unique="true"/>
            </column>
        </addColumn>

        <rollback>
            <dropColumn tableName="jhi_user" columnName="calendar_subscription_token"/>
        </rollback>
    </changeSet>

</databaseChangeLog>