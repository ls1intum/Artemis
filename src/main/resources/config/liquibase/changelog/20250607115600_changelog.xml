<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20250607213400" author="marlonnienaber">

        <createTable tableName="coursewide_calendar_event">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="course_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="start_date" type="datetime(3)">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="datetime(3)"/>
            <column name="location" type="varchar(255)"/>
            <column name="facilitator" type="varchar(255)"/>
            <column name="visible_to_students" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="visible_to_tutors" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="visible_to_editors" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="visible_to_instructors" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseColumnNames="course_id"
                baseTableName="coursewide_calendar_event"
                constraintName="fk_coursewide_calendar_event_course_id"
                deferrable="false"
                initiallyDeferred="false"
                onDelete="CASCADE"
                onUpdate="RESTRICT"
                referencedColumnNames="id"
                referencedTableName="course"
                validate="true"
        />

    </changeSet>
</databaseChangeLog>