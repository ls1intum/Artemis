<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="20240530123000-1" author="yassinsws">
        <!-- Update the discriminator column to include the new subtype -->
        <update tableName="iris_sub_settings">
            <column name="discriminator" value="ingestion"/>
            <where>discriminator IS NULL</where>
        </update>
    </changeSet>

    <changeSet id="20240530123000-2" author="yassinsws">
        <!-- Add new column for enable_auto_update_lecture_ingestion -->
        <addColumn tableName="iris_settings">
            <column name="enable_auto_update_lecture_ingestion" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <!-- Add new column for iris_lecture_ingestion_settings_id -->
        <addColumn tableName="iris_settings">
            <column name="iris_lecture_ingestion_settings_id" type="bigint">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Add foreign key constraint for iris_lecture_ingestion_settings_id -->
        <addForeignKeyConstraint
                baseColumnNames="iris_lecture_ingestion_settings_id"
                baseTableName="iris_settings"
                constraintName="fk_iris_lecture_ingestion_settings"
                referencedColumnNames="id"
                referencedTableName="iris_sub_settings"/>
    </changeSet>
</databaseChangeLog>