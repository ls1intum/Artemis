<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="20250113154600" author="sebastianloose">
        <createTable tableName="lecture_transcription">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_lecture_transcription"/>
            </column>
            <column name="lecture_id"
                    type="BIGINT"/>
            <column name="language"
                    type="VARCHAR(2)"/>
            <column name="lecture_unit_id"
                    type="BIGINT"/>
        </createTable>
        <createTable tableName="lecture_transcription_segments">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_lecture_transcription_segments"/>
            </column>
            <column name="start_time"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="end_time"
                    type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="text"
                    type="TEXT"/>
            <column name="slide_number"
                    type="INT"/>
            <column name="transcription_id"
                    type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseColumnNames="lecture_id"
                                 baseTableName="lecture_transcription"
                                 constraintName="FK_LECTURE_TRANSCRIPTION_ON_LECTURE"
                                 referencedColumnNames="id"
                                 referencedTableName="lecture"/>
        <addForeignKeyConstraint baseColumnNames="lecture_unit_id"
                                 baseTableName="lecture_transcription"
                                 constraintName="FK_LECTURE_TRANSCRIPTION_ON_LECTURE_UNIT"
                                 referencedColumnNames="id"
                                 referencedTableName="lecture_unit"/>
        <addForeignKeyConstraint baseColumnNames="transcription_id"
                                 baseTableName="lecture_transcription_segments"
                                 constraintName="FK_LECTURE_TRANSCRIPTION_SEGMENTS_ON_TRANSCRIPTION"
                                 referencedColumnNames="id"
                                 referencedTableName="lecture_transcription"/>
    </changeSet>
</databaseChangeLog>