<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="20250113154600" author="sebastianloose">
        <createTable tableName="transcription">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_transcription"/>
            </column>
            <column name="language"
                    type="VARCHAR(255)"/>
            <column name="lecture_id"
                    type="BIGINT"/>
        </createTable>

        <createTable tableName="transcription_segments">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_transcription_segments"/>
            </column>
            <column name="start_time"
                    type="DOUBLE"/>
            <column name="end_time"
                    type="DOUBLE"/>
            <column name="text"
                    type="CLOB"/>
            <column name="lecture_unit_id"
                    type="BIGINT"/>
            <column name="transcription_id"
                    type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="lecture_id"
                                 baseTableName="transcription"
                                 constraintName="FK_TRANSCRIPTION_ON_LECTURE"
                                 referencedColumnNames="id"
                                 referencedTableName="lecture"/>

        <addForeignKeyConstraint baseColumnNames="lecture_unit_id"
                                 baseTableName="transcription_segments"
                                 constraintName="FK_TRANSCRIPTION_SEGMENTS_ON_LECTURE_UNIT"
                                 referencedColumnNames="id"
                                 referencedTableName="lecture_unit"/>

        <addForeignKeyConstraint baseColumnNames="transcription_id"
                                 baseTableName="transcription_segments"
                                 constraintName="FK_TRANSCRIPTION_SEGMENTS_ON_TRANSCRIPTION"
                                 referencedColumnNames="id"
                                 referencedTableName="transcription"/>
    </changeSet>
</databaseChangeLog>