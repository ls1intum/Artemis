<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
        http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="20251221161427-add-role-super-admin" author="florian-glombik">
        <preConditions onFail="MARK_RAN">
            <not>
                <sqlCheck expectedResult="1">SELECT COUNT(*) FROM jhi_authority WHERE name = 'ROLE_SUPER_ADMIN'</sqlCheck>
            </not>
        </preConditions>
        <insert tableName="jhi_authority">
            <column name="name" value="ROLE_SUPER_ADMIN"/>
        </insert>
    </changeSet>
</databaseChangeLog>
