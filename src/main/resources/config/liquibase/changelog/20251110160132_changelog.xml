<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
    Increase exam_live_event.created_by column length from VARCHAR(50) to VARCHAR(70)

    Reason:
    Regarding the length of full names, i.e. the UK Government Data Standards Catalogue recommends 70 characters.
    -->
    <changeSet id="20231110-01" author="briksa">
        <modifyDataType
                tableName="exam_live_event"
                columnName="created_by"
                newDataType="varchar(70)"/>
        <rollback>
            <modifyDataType
                    tableName="exam_live_event"
                    columnName="created_by"
                    newDataType="varchar(50)"/>
        </rollback>
    </changeSet>
</databaseChangeLog>