<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="20251216035203-rename-duplicate-room-numbers" author="röttgermann">
        <sql>
            WITH ranked AS (
                SELECT
                    id,
                    room_number,
                    ROW_NUMBER() OVER (
                        PARTITION BY room_number
                        ORDER BY id
                    ) AS rn
                FROM exam_room
            )
            UPDATE exam_room
            SET room_number = CONCAT(room_number, '_DUP_', rn)
            WHERE id IN (
                SELECT id FROM ranked WHERE rn > 1
            );
        </sql>

        <rollback>
            <!-- Not possible -->
        </rollback>
    </changeSet>

    <changeSet id="20251216035203-verify-room-numbers-are-unique" author="röttgermann" runAlways="true">
        <preConditions onFail="HALT">
            <sqlCheck expectedResult="0">
                SELECT COUNT(*) FROM (SELECT room_number
                                      FROM exam_room
                                      GROUP BY room_number
                                      HAVING COUNT(*) > 1)
            </sqlCheck>
        </preConditions>
    </changeSet>

    <changeSet id="20251216035203-add-room-number-unique-constraint" author="röttgermann">
        <addUniqueConstraint
                tableName="exam_room"
                columnNames="room_number"
                constraintName="uc_exam_room_room_number"/>

        <rollback>
            <dropUniqueConstraint
                    tableName="exam_room"
                    constraintName="uc_exam_room_room_number"/>
        </rollback>
    </changeSet>
</databaseChangeLog>
