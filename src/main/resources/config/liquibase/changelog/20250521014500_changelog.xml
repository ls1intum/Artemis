<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
            http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="20250521014500-add-jobid-and-status-to-lecture-transcription" author="goyal">
        <addColumn tableName="lecture_transcription">
            <column name="job_id" type="VARCHAR(255)">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="transcription_status" type="ENUM('PENDING','PROCESSING','COMPLETED','FAILED')" defaultValue="PENDING">
            <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
