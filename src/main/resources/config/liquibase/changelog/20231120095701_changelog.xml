<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet author="andreas" id="20231120095701-1">
        <createTable tableName="math_exercise_details">
            <column name="solution" type="JSON"/>
            <column name="worked_solution" type="LONGTEXT"/>
            <column name="hint" type="JSON"/>
            <column name="input_type" type="VARCHAR(32)"/>
            <column name="input_configuration" type="JSON"/>
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="math_exercise_detailsPK"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="andreas" id="20231120095701-2">
        <createTable tableName="math_submission_details">
            <column name="content" type="JSON"/>
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="math_submission_detailsPK"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
