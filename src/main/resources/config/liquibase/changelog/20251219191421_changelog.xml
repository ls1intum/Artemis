<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="20251219191421-exercise-default-points" author="lezhen">

        <update tableName="exercise">
            <column name="max_points" valueNumeric="1.0"/>
            <where>max_points IS NULL</where>
        </update>

        <update tableName="exercise">
            <column name="bonus_points" valueNumeric="0.0"/>
            <where>bonus_points IS NULL</where>
        </update>

        <addNotNullConstraint tableName="exercise" columnName="max_points" columnDataType="double"/>
        <addNotNullConstraint tableName="exercise" columnName="bonus_points" columnDataType="double"/>

        <sql dbms="mysql">
            ALTER TABLE exercise
                MODIFY max_points DOUBLE NOT NULL DEFAULT 1.0,
                MODIFY bonus_points DOUBLE NOT NULL DEFAULT 0.0;
        </sql>
    </changeSet>

</databaseChangeLog>
