<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="20250523161733" author="bassner">
        <!-- Update the chatMode value from deprecated "CHAT" to "PROGRAMMING_EXERCISE_CHAT" -->
        <update tableName="iris_sub_settings">
            <column name="discriminator" value="PROGRAMMING_EXERCISE_CHAT"/>
            <where>discriminator = 'CHAT'</where>
        </update>

        <!-- Update the chatMode value from deprecated "CHAT" to "PROGRAMMING_EXERCISE_CHAT" for iris sessions -->
        <update tableName="iris_session">
            <column name="discriminator" value="PROGRAMMING_EXERCISE_CHAT"/>
            <where>discriminator = 'CHAT'</where>
        </update>
    </changeSet>
</databaseChangeLog>
